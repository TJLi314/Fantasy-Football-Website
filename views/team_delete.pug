extends layout 

block content 
    h1 #{title}: #{team._id} (id)

    p #[strong Team:]
        a(href=team.url)    #{team.name}
    
    if players.length 
        p #[strong Delete the following players before attempting to delete this team]

        div(style='margin-left:20px;margin-top:20px')
        h4 Players 
        ul
            each player in players 
                li #{player.name}
    
    else 
        p Do you really want to delete this team?

        form(method='POST' action='')
            div.form-group
                input#team.id.form-control(type='hidden', name='teamid', required='true', value=team._id)

            button.btn.btn-primary(type='submit') Delete
            